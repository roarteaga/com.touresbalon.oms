@using GridMvc.Html
@model BusinessObjects.ProductResponse
@{
    ViewBag.Title = "Administración de productos";
}

<h2>Administración de productos</h2>

<p>
</p>
<div class="panel panel-success">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6"><h3 class="panel-title">Productos</h3></div>
            <div class="col-md-6"><span class="pull-right"><a id="Crear" data-toggle="tooltip" title="Agregar Producto" class="btn btn-sm btn-success" onClick="LoadModal('@Url.Action("CreateProduct")')"><span class="glyphicon glyphicon-plus"></span> Agregar Producto</a></span></div>
        </div>
    </div>
    <div class="panel-body">
        @Html.Grid(Model.products).Named("GridProducts").Columns(columns =>
   {
       columns.Add(c => c.name).Titled("Nombre").Sortable(true).Filterable(true);
       columns.Add(c => c.price).Titled("Precio").Sortable(true).Filterable(true);
       columns.Add(c => c.description).Titled("Descripción").Sortable(true).Filterable(true);
       columns.Add()
       .Encoded(false)
       .Sanitized(false)
       .SetWidth(100)
       .Filterable(true)
       .RenderValueAs(foo =>
            @<div class="btn-group btn-group-sm">
                <a data-toggle="tooltip" title="Editar" class="btn btn-sm btn-success" onClick="LoadModal('@Url.Action("EditProduct", new { Id = foo.idProduct})')"><span class="glyphicon glyphicon-cog"></span></a>
            </div>);
            }).Selectable(false).WithPaging(10).Sortable(false).Filterable(false).WithMultipleFilters()
        <hr />
        <div class="row text-center">

        </div>
    </div>
</div>

<div class="modal fade" id="ModalIdentificador" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

</div>

@section Scripts
{
    <script>
        function LoadModal(url) {
            $("#ModalIdentificador").load(url, function () {
                $("#ModalIdentificador").modal("show");
            });
        }
    </script>
}