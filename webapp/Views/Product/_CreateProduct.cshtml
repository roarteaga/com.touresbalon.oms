                            @Html.EditorFor(model => model.target_city, new { htmlAttributes = new { @class = "form-control dvBlock" } })
                            @Html.ValidationMessageFor(model => model.target_city, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.spectacle_date, "Fecha del espectáculo", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.spectacle_date, new { htmlAttributes = new { @class = "form-control dvBlock" } })
                            @Html.ValidationMessageFor(model => model.spectacle_date, "", new { @class = "text-danger" })
